{
  "variables": {
    "aws_region": "ap-southeast-2",
    "aws_profile": "{{ env `AWS_PROFILE` }}",
    "instance_type": "t3.micro",
    "timezone": "Pacific/Auckland"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "profile": "{{ user `aws_profile` }}",
      "region": "{{ user `aws_region` }}",
      // Add another more automated way
      //"source_ami_filter": {
      //  "filters": {
      //    "virtualization-type": "hvm",
      //    "name": "amzn-ami-*-amazon-ecs-optimized",
      //    "root-device-type": "ebs"
      //  },
      //  "owners": [
      //    "amazon"
      //  ],
      //  "most_recent": true
      //},
      "source_ami": "ami-0e3a9308d8f475421",
      "instance_type": "{{ user `instance_type` }}",
      "ssh_username": "ec2-user",
      "associate_public_ip_address": "true",
      "ami_name": "aws-ecs {{timestamp}}",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/xvdcy",
          "volume_size": 20,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "tags": {
        "Name": "AWS ECS Amazon Linux 2 Base Image 20210805",
        "SourceAMI": "{{ .SourceAMI }}",
        "DockerVersion": "19.03.13-ce",
        "ECSAgentVersion": "1.55.0"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/storage.sh"
    },
    {
      "type": "shell",
      "script": "scripts/time.sh",
      "environment_vars": [
        "TIMEZONE={{user `timezone`}}"
      ]
    },
    {
      "type": "shell",
      "script": "scripts/cloudinit.sh"
    },
    {
      "type": "shell",
      "inline": [
        "sudo yum -y -x docker\\* -x ecs\\* update",
        "sudo yum -y install aws-cfn-bootstrap awslogs jq"
      ]
    },
    {
      "type": "shell",
      "script": "scripts/cleanup.sh"
    },
    {
      "type": "file",
      "source": "files/firstrun.sh",
      "destination": "/home/ec2-user/firstrun.sh"
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    }
  ]
}